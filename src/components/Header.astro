---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <div class="header-left">
      <h2 class="site-logo">
        <a href="/" id="siteTitle">{SITE_TITLE}</a>
      </h2>
    </div>
    <div class="header-right" id="socialLinks">
      <a href="/all-hallows" class="social-icon logo-icon">
        <span class="sr-only">All Hallows Home</span>
        <img src="/icons/all-hallows.png" alt="All Hallows - Home" />
      </a>
      <a href="https://www.patreon.com/aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Support AAA Games on Patreon</span>
        <img src="/icons/patreon.svg" alt="Patreon - AAA Games" />
      </a>
      <a href="https://www.facebook.com/aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on Facebook</span>
        <img src="/icons/facebook.svg" alt="Facebook - AAA Games" />
      </a>
      <a href="https://www.tiktok.com/@aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on TikTok</span>
        <img src="/icons/tiktok.svg" alt="TikTok - AAA Games" />
      </a>
      <a href="https://www.youtube.com/@aaagamescompany?sub_confirmation=1" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Subscribe to AAA Games on YouTube</span>
        <img src="/icons/youtube.svg" alt="YouTube - AAA Games" />
      </a>
      <a href="https://kick.com/aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on Kick</span>
        <img src="/icons/kick.svg" alt="Kick - AAA Games" />
      </a>
      <a href="https://www.instagram.com/aaagamescompany/" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on Instagram</span>
        <img src="/icons/instagram.svg" alt="Instagram - AAA Games" />
      </a>
      <a href="https://x.com/aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on X</span>
        <img src="/icons/x.svg" alt="X - AAA Games" />
      </a>
      <a href="https://linktr.ee/aaagamescompany" target="_blank" rel="noopener" class="social-icon">
        <span class="sr-only">Follow AAA Games on Linktree</span>
        <img src="/icons/linktree.svg" alt="Linktree - AAA Games" />
      </a>
    </div>
  </nav>

  <script>
    const siteTitle = document.getElementById("siteTitle");
    const socialLinks = document.getElementById("socialLinks");
    const newHeaderName = "Aardvark Anteater Acoustics Games OÃœ";

    siteTitle.addEventListener("mouseenter", () => {
      siteTitle.classList.add("fade-out");

      siteTitle.addEventListener("transitionend", () => {
        siteTitle.textContent = newHeaderName;
        siteTitle.classList.remove("fade-out");
        siteTitle.classList.add("fade-in");

        const srOnlySpans = socialLinks.querySelectorAll(".sr-only");
        const images = socialLinks.querySelectorAll("img");

        srOnlySpans.forEach(span => {
          span.textContent = span.textContent.replace("AAA Games", newHeaderName);
        });

        images.forEach(img => {
          img.alt = img.alt.replace("AAA Games", newHeaderName);
        });
      }, { once: true });
    }, { once: true });
  </script>

  <style>
    .site-logo a {
      text-decoration: none;
      color: white;
      transition: opacity 0.6s ease;
      display: inline-block;
      cursor: pointer;
    }

    .fade-out { opacity: 0; }
    .fade-in  { opacity: 1; }

    /* Default for all icons */
    .social-icon img {
      width: 28px;
      height: 28px;
      transition: transform 0.2s ease, filter 0.2s ease;
    }

    /* Larger centerpiece All Hallows logo */
    .logo-icon img {
      width: auto;
      height: 40px;     /* bigger than others */
      max-width: 70px;  /* keep proportions */
    }

    .social-icon:hover img {
      transform: scale(1.15);
      filter: drop-shadow(0 0 4px var(--accent));
    }
  </style>
</header>
