<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #1a1a1a;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    color: #ffffff; /* Added for dark theme */
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h2 {
    font-size: 1.5rem;
  }

  a {
    color: #ffffff; /* Added for dark theme */
    text-decoration: none;
  }

  .internal-links {
    display: flex;
    gap: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }
</style>
