---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Nosifer&display=swap" rel="stylesheet">

    <style>
      body { margin:0; display:flex; flex-direction:column; }

      main.homepage-content {
        display:flex; flex-direction:column; align-items:center; text-align:center;
        max-width:900px; margin:-3em auto 0; z-index:10;
      }

      .site-title { display:flex; gap:.5em; align-items:center; flex-wrap:wrap; }
      .site-title img{height:64px;} .site-title span{font-size:2em;font-weight:bold;}

      /* Floating logo container */
      .spooky-logo-container {
        position:fixed; top:0; left:0;
        width:100vw; height:100vh;
        z-index:500; pointer-events:none;
        overflow:hidden;
      }
      .spooky-logo-container a {
        position:absolute; top:34%; left:11%;
        display:flex; align-items:center; justify-content:center;
        pointer-events:auto; animation:floaty 20s infinite ease-in-out;
      }
      .spooky-logo { position:absolute; max-width:350px; width:70vw; text-align:center; }
      .spooky-logo img{width:100%; border-radius:15px;}

      /* Poster fades */
      .spooky-logo-image { animation:fadePoster 6s infinite; }
      @keyframes fadePoster {
        0%,40%{opacity:1;} 50%,100%{opacity:0;}
      }

      /* CLICK ME text */
      .spooky-logo-text {
        font-family:"Creepster","Nosifer",cursive;
        font-size:4vw; font-weight:bold; color:#ff0000;
        text-shadow:0 0 12px rgba(255,0,0,.9), 0 0 30px black;
        opacity:0; position:relative;
        animation:fadeText 6s infinite, shudder .3s infinite, glisten 3s infinite;
        letter-spacing: 3px; /* spacing between letters */
      }
      @keyframes fadeText {
        0%,40%{opacity:0; transform:scale(1.1);}
        50%,100%{opacity:1; transform:scale(1);}
      }
      @keyframes shudder {
        0%,100%{transform:translate(0,0);}
        25%{transform:translate(-2px,1px);}
        50%{transform:translate(2px,-1px);}
        75%{transform:translate(-1px,-2px);}
      }
      @keyframes glisten {
        0%{text-shadow:0 0 10px #ff0000,0 0 20px #ff3333;}
        50%{text-shadow:0 0 25px #ff6666,0 0 50px #ffaaaa;}
        100%{text-shadow:0 0 10px #ff0000,0 0 20px #ff3333;}
      }

      /* Floating motion */
      @keyframes floaty {
        0%,100%{transform:translate(-50%,-50%) rotate(2deg) scale(.95);}
        50%{transform:translate(-52%,-48%) rotate(-2deg) scale(1);}
      }

      @media(max-width:768px){.spooky-logo{max-width:280px;}}
      @media(max-width:480px){.spooky-logo{max-width:220px;}}
    </style>
  </head>

  <body>
    <!-- Background -->
    <div class="watermark-container">
      <video autoplay muted loop playsinline>
        <source src="/videos/AAA_Gif_Ident_small.webm" type="video/webm"/>
        <source src="/videos/AAA_Gif_Ident_small.mp4" type="video/mp4"/>
      </video>
    </div>

    <Header />

    <main class="homepage-content">
      <h1 class="site-title">
        <img src="/favicon.svg" alt="AAA Games icon"/>
        <span>AAA Games</span>
        <img src="/icons/unreal.svg" alt="Unreal Engine icon"/>
      </h1>
      <p class="homepage-intro">
        Welcome to the official <a href="https://www.youtube.com/@aaagamescompany">AAA Games</a> website.
        This is the home of AAA Games Company, developing a computer game!
      </p>
    </main>

    <!-- Floating Spooky Logo -->
    <div class="spooky-logo-container">
      <a href="/all-hallows/#trailer">
        <div class="spooky-logo spooky-logo-image">
          <img src="/press_kit_placeholders/Vertical_Poster.png" alt="All Hallows Poster"/>
        </div>
        <div class="spooky-logo spooky-logo-text">
          CLICK ME
        </div>
      </a>
    </div>

    <Footer />
  </body>
</html>
