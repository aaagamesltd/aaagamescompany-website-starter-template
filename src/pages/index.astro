<script async src="https://www.googletagmanager.com/gtag/js?id=G-MVZ3YM60WQ"></script>

    <style>
      html, body {
        height: 100%;
        margin: 0;
        font-family: sans-serif;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      main.homepage-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        text-align: center;
        width: 90%;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        gap: 1em;
        margin-top: -3em;
        position: relative; /* Ensure content is layered correctly */
        z-index: 10;
      }

      .site-title {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5em;
        flex-wrap: wrap;
      }

      .site-title img { height: 64px; }
      .site-title span { font-size: 2em; font-weight: bold; }

      .homepage-intro {
        margin-top: 0.75em;
        font-size: 1.1em;
        line-height: 1.5;
      }

      /* --- Performance-Optimized Spooky Logo --- */
      .spooky-logo-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 500;
        pointer-events: none; /* Let clicks pass through the container */
      }

      .spooky-logo-container a {
        position: absolute;
        top: 34%;
        /* THIS IS THE LINE THAT MOVED THE LOGO */
        left: 11%; 
        display: block;
        pointer-events: auto; /* The link itself is clickable */
        will-change: transform; /* Hint for browser optimization */
        animation: light-drift 20s infinite ease-in-out;
      }

      .spooky-logo {
        display: block;
        max-width: 350px;
        width: 70vw;
        border-radius: 15px;
        cursor: pointer;
        transition: filter 0.3s ease-in-out;
        will-change: filter; /* Hint for browser optimization */
        animation: light-glow 8s infinite ease-in-out;
      }

      .spooky-logo-container a:hover {
        animation-play-state: paused; /* Stop drifting on hover */
      }

      .spooky-logo-container a:hover .spooky-logo {
        animation-play-state: paused; /* Stop glowing on hover */
        filter: drop-shadow(0 0 15px rgba(255, 100, 0, 1)) 
                drop-shadow(0 0 40px rgba(255, 69, 0, 0.8)) 
                brightness(1.2);
      }

      /* Lightweight drifting animation */
      @keyframes light-drift {
        0% { transform: translate(-50%, -50%) rotate(2deg) scale(0.9); }
        50% { transform: translate(-55%, -45%) rotate(-2deg) scale(1); }
        100% { transform: translate(-50%, -50%) rotate(2deg) scale(0.9); }
      }

      /* Lightweight color glow animation */
      @keyframes light-glow {
        0%, 100% {
          filter: drop-shadow(0 0 8px rgba(255, 140, 0, 0.6)) 
                  drop-shadow(0 0 16px rgba(255, 140, 0, 0.4));
        }
        50% {
          filter: drop-shadow(0 0 12px rgba(170, 0, 255, 0.7)) 
                  drop-shadow(0 0 24px rgba(170, 0, 255, 0.5));
        }
      }

      @media (max-width: 768px) {
        main.homepage-content { margin-top: -2em; }
        .site-title img { height: 48px; }
        .site-title span { font-size: 1.5em; }
        .homepage-intro { font-size: 1em; margin-top: 0.5em; }
        .spooky-logo { max-width: 280px; }
      }

      @media (max-width: 480px) {
        main.homepage-content { margin-top: -1.5em; }
        .site-title img { height: 40px; }
        .site-title span { font-size: 1.3em; }
        .homepage-intro { font-size: 0.95em; margin-top: 0.5em; }
        .spooky-logo { max-width: 220px; }
      }
    </style>
  </head>

  <body>
    <!-- Watermark background video -->
    <div class="watermark-container">
      <video autoplay muted loop playsinline>
        <source src="/videos/AAA_Gif_Ident_small.webm" type="video/webm" />
        <source src="/videos/AAA_Gif_Ident_small.mp4" type="video/mp4" />
      </video>
    </div>

    <Header />

    <main class="homepage-content">
      <h1 class="site-title">
        <img src="/favicon.svg" alt="AAA Games icon" />
        <span>AAA Games</span>
        <img src="/icons/unreal.svg" alt="Unreal Engine icon" />
      </h1>

      <p class="homepage-intro">
        Welcome to the official <a href="https://www.youtube.com/@aaagamescompany">AAA Games</a> website.
        This is the home of AAA Games Company, developing a computer game!
      </p>
    </main>

    <!-- Performance-Optimized Floating Logo -->
    <div class="spooky-logo-container">
      <a href="/all-hallows/#trailer">
        <img 
          src="/press_kit_placeholders/Vertical_Poster.png" 
          alt="All Hallows Press Kit - Click to Learn More" 
          class="spooky-logo"
        />
      </a>
    </div>

    <Footer />
  </body>
</html>

