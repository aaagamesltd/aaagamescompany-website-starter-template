---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

      html, body {
        font-family: 'Inter', sans-serif;
        position: relative;
        margin: 0;
        padding: 0;
        width: 100%;
        max-width: 100%;
        overflow-x: hidden; /* Prevents sideways scrolling */
      }

      /* The container for the watermark */
      .watermark-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1; /* Puts the watermark behind the content */
        overflow: hidden;
      }

      /* The GIF itself */
      .watermark-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensures the GIF covers the entire container */
        opacity: 0.1; /* Adjust this value to change the transparency of the watermark */
        max-width: 100%; /* Make sure it doesn't exceed container width */
      }

      main img {
        max-width: 100%;
        height: auto;
      }

      h1 img {
        height: 2.5em; /* responsive instead of fixed px */
        vertical-align: middle;
        margin-right: 0.5em;
        transform: translateY(-0.2em);
      }
    </style>
  </head>
  <body>
    <div class="watermark-container">
      <img src="/AAA_Gif_Ident.gif" alt="Watermark GIF" />
    </div>
    <Header />
    <main>
      <h2 style="text-align: center;">
        <img src="favicon.svg" alt="AAA Games icon"> AAA Games
      </h2>
      <p>
        Welcome to the official <a href="https://www.youtube.com/@aaagamescompany">AAA Games</a> website. This is the home of AAA Games Company, who are developing a computer game!
      </p>

      <p style="margin-top: 10rem;"></p>
    </main>
    <Footer />
  </body>
</html>
