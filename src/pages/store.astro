---
import { Icon } from 'astro-icon';

// This is where you would get your products from an API or a data file in a real-world scenario.
// For this example, we'll use placeholder data.
const featuredProducts = [
  {
    name: 'Ithris Cemetery Map Poster',
    description: 'A beautifully detailed map of the haunted Ithris Cemetery.',
    image: 'https://placehold.co/600x600/1e293b/d1d5db?text=Map+Poster',
    link: '#', // Replace with a link to your Etsy listing
  },
  {
    name: 'Ghostly Guardian T-Shirt',
    description: 'A soft cotton tee featuring the iconic Ghostly Guardian from the game.',
    image: 'https://placehold.co/600x600/1e293b/d1d5db?text=T-Shirt',
    link: '#', // Replace with a link to your Etsy listing
  },
  {
    name: 'Soul Compass Mug',
    description: 'A sturdy mug for your morning brew, with a design inspired by the Soul Compass artifact.',
    image: 'https://placehold.co/600x600/1e293b/d1d5db?text=Mug',
    link: '#', // Replace with a link to your Etsy listing
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Ithris Cemetery Collection</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #1a202c;
        color: #e2e8f0;
      }
    </style>
  </head>
  <body>
    <header class="bg-gray-800 shadow-lg p-6 flex justify-between items-center sticky top-0 z-50">
      <div class="flex items-center space-x-4">
        <h1 class="text-2xl font-bold text-gray-100">Ithris Cemetery</h1>
      </div>
      <nav class="space-x-4">
        <a href="#featured" class="text-gray-300 hover:text-white transition duration-300">Products</a>
        <a href="https://www.etsy.com/shop/your-shop-name" target="_blank" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition-colors duration-300">Visit Our Etsy Shop</a>
      </nav>
    </header>

    <main class="container mx-auto p-8">
      <!-- Hero Section -->
      <section class="text-center py-20 px-4">
        <h2 class="text-5xl md:text-6xl font-extrabold text-white mb-4 leading-tight">Your Adventure Awaits. <br>Our Merch Is Here.</h2>
        <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
          Explore the world of Ithris Cemetery with our official collection of apparel, art, and accessories. Each item is crafted to bring a piece of the game's haunting beauty into your life.
        </p>
        <a href="https://www.etsy.com/shop/your-shop-name" target="_blank" class="inline-block bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white text-lg font-bold py-3 px-8 rounded-full shadow-lg transform transition-transform duration-300 hover:scale-105">
          Shop the Full Collection
        </a>
      </section>

      <!-- Featured Products Section -->
      <section id="featured" class="py-16">
        <h3 class="text-4xl font-bold text-center text-white mb-12">Featured Products</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            featuredProducts.map((product) => (
              <a href={product.link} target="_blank" class="block bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 group">
                <img src={product.image} alt={product.name} class="rounded-t-xl w-full h-auto object-cover group-hover:opacity-90 transition-opacity duration-300" />
                <div class="p-6">
                  <h4 class="text-xl font-semibold text-white mb-2">{product.name}</h4>
                  <p class="text-gray-400 text-sm mb-4">{product.description}</p>
                  <div class="flex items-center justify-between">
                    <span class="text-lg font-bold text-purple-400">View on Etsy</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 group-hover:text-purple-400 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <!-- About Section -->
      <section class="text-center py-20 px-4">
        <div class="max-w-3xl mx-auto">
          <h3 class="text-4xl font-bold text-white mb-6">About Our Store</h3>
          <p class="text-gray-400 text-lg">
            Welcome to the official merch store for **Ithris Cemetery**. Every purchase supports our development and helps us bring more of this world to life. We're passionate about creating high-quality, unique products for our fans, and we appreciate your support!
          </p>
        </div>
      </section>
    </main>

    <footer class="bg-gray-900 text-center py-8">
      <p class="text-gray-500 text-sm">&copy; 2025 Ithris Cemetery. All rights reserved.</p>
    </footer>

  </body>
</html>
